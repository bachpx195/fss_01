<div class="panel panel-default">
  <h3 class="panel-heading"><%= t "user.home" %></h3>
</div>
<div class="spacer10"></div>
<div class="ui four cards">
  <% users.each do |user| %>
    <div class="card">
      <%= link_to user, class: "image" do %>
        <%= image_tag user.avatar %>
      <% end %>
      <div class="content">
        <%= link_to user.name, user, class: "header" %>
        <div class="meta">
          <span class="left floated">
            <i class="payment outline small icon"></i>
            <%= user.recipes.count %> <%= t "recipe.recipes" %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>
