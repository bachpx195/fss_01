<div class="row">
  <div class="col-lg-12">
    <table class="table table-bordered table-striped table-responsive">
      <thead>
      <tr>
        <th class="text-center"><%= t "table.index" %></th>
        <th class="text-center"><%= t "recipe.name" %></th>
        <th class="text-center"><%= t "recipe.social" %></th>
        <th class="text-center"><%= t "recipe.status" %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% recipes.each_with_index do |f,index| %>
          <tr>
            <td class="text-center"><%= index + 1  %></td>
            <td><%= link_to  f.name, [f] %></td>
            <td class="text-center"><%=
              raw format_recipe_social(f.views_count, f.likes_count, f.votes_count) %></td>
            <td class="text-center"><%= t "recipe.recipe_status.#{f.status}" %></td>
            <td>
              <%= link_to t("recipe.edit"), edit_recipe_path(f) %>
              &nbsp &nbsp &nbsp
              <%= link_to t("recipe.remove"), personal_recipe_path(f, type: @type), method: :delete,
                data: {confirm: t("recipe.destoy_confirm")},
                remote: :true, class: "destroy-recipe"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
