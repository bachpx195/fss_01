<div class="panel panel-default">
  <h3 class="panel-heading"><%= t "home.favorite_recipes" %></h3>
</div>
<div class="spacer10"></div>
<div class="row">
  <% recipes.each_with_index do |recipe, index| %>
    <div class="grid-mode">
      <div class="col-sm-4 col-md-4 col-lg-4">
        <%= render "shared/recipe", recipe: recipe %>
      </div>
    </div>
  <% end %>
  <div id="recipe-list"></div>
</div>
<div class="row">
  <div class="col-lg-12 text-center">
    <%= link_to t("home.read_more"),
      searches_path(q: {name_or_description_cont: ""}),
      class: "col-lg-4 col-lg-offset-4 btn btn-danger" %>
  </div>
</div>
<br>
<%= render "banner", type: Settings.frontend.banner_middle %>
<div class="spacer20"></div>
<br>
