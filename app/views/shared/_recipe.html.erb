<% if type== Constants::HomePage::FAVORITE_RECIPES %>
  <div class="thumbnail">
    <div class="caption row">
      <div class="col-md-12">
        <%= image_tag "/demo/mon-an.jpg",
          class: "img-responsive", height: "200px", width: "300px" %>
        <h3><%= link_to "Bánh ngọt" %>
          <a href="#" class="btn btn-primary pull-right"
            role="button"><%= t :guide %></a></h3>
        <span class="pull-left">
          <% for i in 1..5 %>
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
          <% end %>
        </span>
        <span class="pull-right">
          <span class="glyphicon glyphicon-eye-open"
            aria-hidden="true"></span> 123 đang xem
        </span>
      </div>
    </div>
  </div>
<% elsif type== Constants::HomePage::TIP_RECIPES %>
    <div class="thumbnail">
      <%= image_tag "/demo/meo-vat.jpg",
        class: "img-responsive", height: "200px", width: "300px" %>
      <div class="caption">
        <h4><%= link_to "Cách sơ chế nấm tươi và nấm khô
          sạch mà không bị mất chất" %></h4>
        <span class="pull-left">
          <a href="#" class="btn btn-primary pull-right"
            role="button"><%= t :guide %></a>
        </span>
        <span class="pull-right">
          <span class="glyphicon glyphicon-eye-open"
            aria-hidden="true"></span> 123 đang xem
        </span>
      </div>
    </div>
<% end %>
